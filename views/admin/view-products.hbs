<section class="container">
    <div class="row">
        <a href="admin/add-product" class="btn btn-success ml-auto mt-2 mb-2">Add Products</a>
    </div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">category</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">1</th>
                <td>{{this.name}}</td>
                <td>{{this.category}}</td>
                <td>{{this.description}}</td>
                <td><img src="{{this.image}}" width="50px" height="50px" style="object-fit: contain;" alt=""></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>